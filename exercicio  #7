while True:
  try:
    numero = int(input('digite um valor de 0 a 10 '))
  except ValueError:
    print('o numero informado deve ser um valor inteiro ')
  else:
    if 0<= numero <= 10:
      print(f'numero informado Ã© {numero}')
      break
    else:
      print('o valor deve estar entre 0 e 10 ')
