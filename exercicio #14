class pessoa:
  def __init__(self, nome, idade, altura, peso) :
    self.nome = nome
    self.idade = idade
    self.peso = peso
    self.altura = altura

  def envelhecer(self):
    if self.idade < 21:
      self.altura += 5
    self.idade += 1

pedro = pessoa('Pedro', 15, 172, 83)

for _ in range(7):
  pedro.envelhecer()
  print(f'Idade de Pedro {pedro.idade} peso {pedro.peso} altura {pedro.altura} em cm')
